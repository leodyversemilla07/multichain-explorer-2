# MultiChain Explorer 2 - Configuration
# Copy this file to .env and update with your settings

# =============================================================================
# MultiChain Node Connection
# =============================================================================

# Name of the blockchain (used for display and routing)
MULTICHAIN_CHAIN_NAME=mychain

# RPC connection details
MULTICHAIN_RPC_HOST=127.0.0.1
MULTICHAIN_RPC_PORT=8000
MULTICHAIN_RPC_USERNAME=multichainrpc
MULTICHAIN_RPC_PASSWORD=your_rpc_password_here

# =============================================================================
# Explorer Settings
# =============================================================================

# Host to bind the web server to
# Use 0.0.0.0 to accept connections from any IP (production)
# Use 127.0.0.1 to only accept local connections (development)
EXPLORER_HOST=127.0.0.1

# Port for the web interface
EXPLORER_PORT=8080

# Enable debug mode (enables auto-reload)
DEBUG=false

# Base URL prefix (useful for reverse proxy setups)
# BASE_URL=/explorer
